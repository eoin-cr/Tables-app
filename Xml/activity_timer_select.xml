<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:id="@+id/button1m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_1_minute"
        app:layout_constraintBottom_toBottomOf="@+id/button3m"
        app:layout_constraintEnd_toStartOf="@+id/button3m"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button3m" />

    <Button
        android:id="@+id/button3m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_3_minutes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button5m"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button1m"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_5_minutes"
        app:layout_constraintBottom_toBottomOf="@+id/button3m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button3m"
        app:layout_constraintTop_toTopOf="@+id/button3m" />

</androidx.constraintlayout.widget.ConstraintLayout>